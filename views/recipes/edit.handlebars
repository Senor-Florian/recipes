<h2>Edit recipe</h2>
<form method="POST" action="/recipes/{{recipe.id}}?_method=PUT">
  <p>Name of the recipe:</p>
  <input type="text" name="name" value="{{recipe.name}}"/> <br>
  <p>Description:</p>
  <textarea name="description">{{recipe.description}}</textarea> <br>
  <p>Preparation time in minutes:</p>
  <input type="text" name="duration" value="{{recipe.duration}}" /> <br>
  <p>Difficulty:</p>
  <input type="radio" name="difficulty" value="easy" /> Easy<br>
  <input type="radio" name="difficulty" value="medium" /> Medium <br>
  <input type="radio" name="difficulty" value="hard" /> Hard <br>
  <p>Ingedients:</p>
  <textarea type="text" name="ingredients">{{recipe.ingredients}}</textarea> <br>
  <p>Origin:</p>
  <input type="text" name="origin" value="{{recipe.origin}}" /> <br>
  <p>Gluten free:</p>
  <input type="radio" name="gluten_free" value="true" /> Yes <br>
  <input type="radio" name="gluten_free" value="false" /> No <br>
  <input type="submit" value="Update recipe" />
</form>